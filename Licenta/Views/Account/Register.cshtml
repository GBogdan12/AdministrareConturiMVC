@model Licenta.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
<link href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link href="~/Content/login.css" rel="stylesheet" />


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@{
    Layout = null;


}


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <body>
        <div class="container">
            <header>
                <h1>Aplicatie Licenta 2022</h1>
            </header>
            <div id="container_demo">
                <section>
                   
                        <div id="wrapper">
                            <div id="register">
                                <form action="mysuperscript.php" autocomplete="on">
                                    <h1> Inregistrare </h1>
                                    <p>
                                        @Html.ValidationSummary(true, "", new { @class = "alert-danger" })
                                        <label for="emailsignup" class="youmail"> Email</label>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </p>
                                    <p>
                                        <label for="passwordsignup" class="youpasswd">Parola </label>
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </p>
                                    <p>
                                        <label for="passwordsignup_confirm" class="youpasswd">Confirma Parola </label>
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                    </p>
                                    <p class="signin button">
                                        <input type="submit" class="btn btn-default" value="Register" />
                                    </p>
                                    <p class="change_link">
                                        Ai deja un cont?
                                        @Html.ActionLink("Login", "Login")
                                    </p>

                                   
                                </form>
                            </div>
                        </div>

                      
                </section>
            </div>
        </div>
    </body>
}
